#!/bin/bash
declare -a MONITORS
MONITORS=($(xrandr | grep " connected" | awk '{ print $1}'))
num_monitors=${#MONITORS[*]}

switch_mobile() {
	xrandr --output DP-2 --off --output eDP-1-1 --auto
}

switch_docked() {
	#xrandr --output DP-1-2 --auto --scale 2x2 --output eDP-1 --auto --left-of DP-1-2
	xrandr --output DP-2 --auto --scale 2x2 --output eDP-1-1 --off
}
if [[ $1 == "mobile" ]]; then
	switch_mobile
elif [[ $1 == "docked" ]]; then
	switch_docked
# assume auto
else
	if [[ "$num_monitors" -eq "2" ]]; then
		switch_docked
	else
		switch_mobile
	fi
fi
# Reset backgound
feh --bg-fill $HOME/.local/share/wallpapers/wallpaper
